<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/mythemecolor"
        app:cardCornerRadius="15dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        android:id="@+id/parent_layout_In_RecyclerView_selling"
        android:layout_margin="10dp">


        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_gravity="end"
            android:clickable="true"
            android:background="@drawable/delete_sign_red_reounded"
            >

        </Button>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewItemInRecyclerView_selling"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="top"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/e" />


            <TextView
                android:id="@+id/txttitleInRecyclerView_selling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Hier ist the name of the artikel"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtpreisInRecyclerView_selling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingBottom="2dp"
                android:text="here is the Preis 10â‚¬"
                android:textColor="@color/whitebackground"
                android:textSize="10sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>